
{
  "name": "netfast-electron",
  "version": "1.0.0",
  "description": "NetFast - Digital Discipline Desktop App",
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && electron .\"",
    "build": "electron-builder",
    "dist": "npm run build:web && electron-builder"
  },
  "build": {
    "appId": "com.netfast.app",
    "productName": "NetFast",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "services/**/*",
      "../dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
